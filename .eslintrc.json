{
    "extends": [
        "airbnb",
        "plugin:prettier/recommended"
    ],
    "globals": {
        "document": true
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "sourceType": "module",
        "jsx": true,
        "useJSXTextNode": true
    },
    "rules": {
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [".js", ".jsx", ".ts", ".tsx"]
            }
        ],
        "no-unused-vars": "off",
        "@typescript-eslint/no-unused-vars": "error"
    },
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [".js", ".jsx", ".ts", ".tsx"]
        }
      }
    }
}
